<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/main_background"
    android:id="@+id/registrati"
    android:gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity = "center"
        android:orientation = "vertical">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/logo_png"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:text="Registrati"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:drawableLeft="@drawable/registrati_icon"
            android:padding="18dp"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:id="@+id/registrati_btn"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:text="Continua con Google"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:drawableLeft="@drawable/google_icon"
            android:padding="18dp"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:id="@+id/loginGoogle_btn"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:text="Continua con Facebook"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:drawableLeft="@drawable/facebook_icon"
            android:padding="18dp"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:id="@+id/loginFacebook_btn"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginFacebook_btn"
            android:text="Hai giÃ  un account? "
            android:layout_marginTop="16dp"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginFacebook_btn"
            android:layout_toEndOf="@id/loginFacebook_btn"
            android:text="Accedi"
            android:textColorLink="#FF0000"
            android:textSize="16sp"
            android:clickable="true"
            android:id="@+id/accedi_tx"/>


    </LinearLayout>

</RelativeLayout>